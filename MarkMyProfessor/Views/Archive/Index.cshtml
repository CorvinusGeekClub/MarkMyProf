@model bool?
<div class="row" style="margin-top: 60px">
    @if (Model.HasValue && Model.Value)
    {
        <div class="alert alert-success" role="alert">Sikeres betöltés</div>
    }
    @if (Model.HasValue && !Model.Value)
    {
        <div class="alert alert-danger" role="alert">Probléma történt</div>
    }
    <div class="col-md-12">
        <form asp-action="SeedUrl" method="post">
            <div class="form-group">
                <label for="url">Url to scrape</label>
                <input type="text" class="form-control" id="url" name="url" placeholder="http://">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>